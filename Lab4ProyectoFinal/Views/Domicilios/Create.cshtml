@model Lab4ProyectoFinal.Models.Domicilio

<div class="container my-5">
    <h1 class="text-center mb-4">Agregar Domicilio</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="p-4 shadow-sm rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Calle" class="form-label">Calle</label>
                    <input asp-for="Calle" class="form-control" placeholder="Ej: Avenida Siempre Viva 742" />
                    <span asp-validation-for="Calle" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <input type="submit" value="Agregar" class="btn btn-primary me-2" />
                    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

