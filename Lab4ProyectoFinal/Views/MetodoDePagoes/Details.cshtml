@model Lab4ProyectoFinal.Models.MetodoDePago

@{
    ViewData["Title"] = "Detalles del Método de Pago";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Detalles del Método de Pago</h1>

    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Información del Método de Pago</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 text-secondary">
                    @Html.DisplayNameFor(model => model.NumeroDeTarjeta)
                </dt>
                <dd class="col-sm-8">
                    <strong>@Html.DisplayFor(model => model.NumeroDeTarjeta)</strong>
                </dd>

                <dt class="col-sm-4 text-secondary">
                    @Html.DisplayNameFor(model => model.MarcaDeTarjeta)
                </dt>
                <dd class="col-sm-8">
                    <strong>@Html.DisplayFor(model => model.MarcaDeTarjeta)</strong>
                </dd>

                <dt class="col-sm-4 text-secondary">
                    @Html.DisplayNameFor(model => model.Expiracion)
                </dt>
                <dd class="col-sm-8">
                    <strong>@Html.DisplayFor(model => model.Expiracion)</strong>
                </dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning mx-2">
            <i class="fas fa-edit"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary mx-2">
            <i class="fas fa-arrow-left"></i> Volver a la lista
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script> <!-- Iconos Font Awesome -->
}
