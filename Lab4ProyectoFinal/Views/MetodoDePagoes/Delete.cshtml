@model Lab4ProyectoFinal.Models.MetodoDePago

@{
    ViewData["Title"] = "Eliminar Método de Pago";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Eliminar Método de Pago</h1>

    <div class="alert alert-warning text-center" role="alert">
        <h3>¿Está seguro de que desea eliminar este método de pago?</h3>
    </div>

    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">Detalles del Método de Pago</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.NumeroDeTarjeta)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.NumeroDeTarjeta)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.MarcaDeTarjeta)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.MarcaDeTarjeta)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Expiracion)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Expiracion)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="text-center mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>
