@model Lab4ProyectoFinal.Models.MetodoDePago

@{
    ViewData["Title"] = "Editar Método de Pago";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Editar Método de Pago</h1>

    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Información del Método de Pago</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="NumeroDeTarjeta" class="form-label"></label>
                    <input asp-for="NumeroDeTarjeta" class="form-control" />
                    <span asp-validation-for="NumeroDeTarjeta" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MarcaDeTarjeta" class="form-label"></label>
                    <input asp-for="MarcaDeTarjeta" class="form-control" />
                    <span asp-validation-for="MarcaDeTarjeta" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Expiracion" class="form-label"></label>
                    <input asp-for="Expiracion" class="form-control" />
                    <span asp-validation-for="Expiracion" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <input type="submit" value="Guardar" class="btn btn-success me-2" />
                    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
