@model Lab4ProyectoFinal.Models.Domicilio

@{
    ViewData["Title"] = "Eliminar Domicilio";
}

<div class="container my-5">
    <h1 class="text-center text-danger mb-4">Eliminar Domicilio</h1>

    <div class="alert alert-warning text-center">
        <h5>¿Estás seguro de que quieres eliminar este domicilio?</h5>
        <p>Esta acción no se puede deshacer.</p>
    </div>

    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">Detalles del Domicilio</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Calle</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Calle)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">Eliminar</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>
