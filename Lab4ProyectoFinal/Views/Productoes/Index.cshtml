@model X.PagedList.IPagedList<Lab4ProyectoFinal.Models.Producto>
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "Listado de Productos";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Listado de Productos</h1>

    <form asp-controller="Productoes" asp-action="Index" class="d-flex align-items-center mb-3">
       
        <input type="text" name="buscarProducto" id="buscarProducto" class="form-control form-control-sm me-2" placeholder="Nombre del producto" />
        <button type="submit" class="btn btn-dark btn-sm">BUSCAR</button>
    </form>




    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Marca</th>
                        <th>Precio</th>
                        <th>Categoría</th>
                        <th>Tamaño</th>
                        <th>Descripción</th>
                        <th>Imagen</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Marca)</td>
                            <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                            <td>@Html.DisplayFor(modelItem => item.Categoria)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tamaño)</td>
                            <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                            <td><img src="/Fotos/@item.ImagenCarpeta" class="img-fluid" style="max-width: 100px;" /></td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-2 text-white">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="pagination-container mt-4">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
   {
       UlElementClasses = new[] { "pagination", "justify-content-center" },
       LiElementClasses = new[] { "page-item" },
       PageClasses = new[] { "page-link" },
       ActiveLiElementClass = "active",
       LinkToPreviousPageFormat = "Anterior",
       LinkToNextPageFormat = "Siguiente",
       LinkToFirstPageFormat = "Primera",
       LinkToLastPageFormat = "Última",
       DisplayLinkToFirstPage = PagedListDisplayMode.Always,
       DisplayLinkToLastPage = PagedListDisplayMode.Always,
       DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
       DisplayLinkToNextPage = PagedListDisplayMode.Always,
       Display = PagedListDisplayMode.Always
   })
    </div>
</div>
