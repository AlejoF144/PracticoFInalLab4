@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="container mt-5">
    <div class="col-md-6 col-lg-4 mx-auto">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                <h5 class="text-center">Usa una cuenta local para iniciar sesión.</h5>
                <hr />
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Contraseña</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">Recordarme</label>
                    </div>

                    <button id="login-submit" type="submit" class="w-100 btn btn-primary btn-lg">Iniciar sesión</button>
                </form>

                <div class="mt-3 text-center">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar como nuevo usuario</a>
                    </p>
                    
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
