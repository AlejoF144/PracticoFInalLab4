@model Lab4ProyectoFinal.Models.Usuario

<div class="container my-5">
    <h1 class="text-center mb-4">Eliminar Usuario</h1>

    <div class="alert alert-warning text-center" role="alert">
        <h3>¿Está seguro de que desea eliminar este usuario?</h3>
    </div>

    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">Usuario a Eliminar</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Nombre)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Nivel)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nivel)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Estado)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.ImagenCarpeta)</dt>
                <dd class="col-sm-9">
                    <img src="/Fotos/@Html.DisplayFor(model => model.ImagenCarpeta)" alt="Imagen del usuario" class="img-fluid rounded" style="max-width: 300px;" />
                </dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.MetodoDePago)</dt>
                <dd class="col-sm-9">
                    @Model.MetodoDePago?.MarcaDeTarjeta - @Model.MetodoDePago?.NumeroDeTarjeta
                </dd>

                <dt class="col-sm-3 fw-bold">Domicilio</dt>
                <dd class="col-sm-9">@Model.Domicilio?.Calle</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="text-center mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>
