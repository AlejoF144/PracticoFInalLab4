@model Lab4ProyectoFinal.Models.Domicilio

<div class="container my-5 d-flex justify-content-center">
    <div class="form-container card shadow-sm">
        <br />
        <h1 class="text-center mb-4">Editar Domicilio</h1>
        
        <div class="card-body">
            <form asp-action="Edit" class="p-3 needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Calle" class="form-label fw-bold">Calle</label>
                    <input asp-for="Calle" class="form-control" placeholder="Ingrese la calle" />
                    <span asp-validation-for="Calle" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary me-2">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

