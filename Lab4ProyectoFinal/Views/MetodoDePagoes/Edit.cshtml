@model Lab4ProyectoFinal.Models.MetodoDePago

<div class="container my-5 d-flex justify-content-center">
    <div class="form-container bg-light shadow-sm p-4 rounded">
        <h1 class="text-center mb-4">Editar Método de Pago</h1>
        <form asp-action="Edit" class="p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="NumeroDeTarjeta" class="form-label fw-bold"></label>
                <input asp-for="NumeroDeTarjeta" class="form-control" />
                <span asp-validation-for="NumeroDeTarjeta" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MarcaDeTarjeta" class="form-label fw-bold"></label>
                <input asp-for="MarcaDeTarjeta" class="form-control" />
                <span asp-validation-for="MarcaDeTarjeta" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Expiracion" class="form-label fw-bold"></label>
                <input asp-for="Expiracion" class="form-control" />
                <span asp-validation-for="Expiracion" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <input type="submit" value="Guardar" class="btn btn-primary me-2" />
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-container {
        max-width: 600px;
        width: 100%;
    }

    h1 {
        font-size: 2rem;
        color: #2c3e50;
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
        color: #2c3e50;
    }

    .form-control, .form-select {
        border-radius: 0.5rem;
        border: 1px solid #ced4da;
        padding: 0.75rem;
        font-size: 1rem;
    }

        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        background-color: #3498db;
        border-color: #2980b9;
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
        border-radius: 0.5rem;
    }

    .btn-secondary {
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
        border-radius: 0.5rem;
    }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 5px;
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }

    .shadow-sm {
