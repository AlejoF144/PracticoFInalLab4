@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Lab4ProyectoFinal.Models.Producto>


<div class="container my-4">
    <h1 class="text-center mb-4">Listado de Productos</h1>

    <form asp-controller="Productoes" asp-action="Index">
        <p>
            Buscar por nombre: <input type="text" name="buscarProducto" class="form-text" />
            <input type="submit" value="Buscar" class="btn btn-sm btn-dark" />
        </p>
    </form>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-primary">
                <tr>
                    <th>Nombre</th>
                    <th>Marca</th>
                    <th>Precio</th>
                    <th>Categoria</th>
                    <th>Tamaño</th>
                    <th>Descripcion</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Marca</td>
                        <td>@item.Precio</td>
                        <td>@item.Categoria</td>
                        <td>@item.Tamaño</td>
                        <td>@item.Descripcion</td>
                        <td><img src="/Fotos/@item.ImagenCarpeta" class="img-fluid" style="max-width: 100px;" /></td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="pagination-container">
        @Html.PagedListPager(Model,page => Url.Action("Index", new { page }),new PagedListRenderOptions
        {
            UlElementClasses = new[] { "pagination", "justify-content-center" },
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" },
            ActiveLiElementClass = "active",
            LinkToPreviousPageFormat = "Anterior",
            LinkToNextPageFormat = "Siguiente",
            LinkToFirstPageFormat = "Primera",
            LinkToLastPageFormat = "Última",
            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
            DisplayLinkToLastPage = PagedListDisplayMode.Always,
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
            Display = PagedListDisplayMode.Always
        })
    </div>
   

</div>
